// For format details, see https://aka.ms/devcontainer.json. For config options, see the README at:
{
	"name": "pluczak-dev",
	"image": "mcr.microsoft.com/devcontainers/python:3.11-bookworm",
	"userEnvProbe": "none",
	"hostRequirements": {
		"gpu": true
	},
	"mounts": [
		"source=/data/TrueNas_MISEL/datasets,target=/datasets,type=bind,consistency=cached",
		"source=/data/LOCAL_MISEL,target=/LOCAL,type=bind,consistency=cached"
	],
	// Features to add to the dev container. More info: https://containers.dev/features.
	"features": {
		"ghcr.io/devcontainers/features/git": {},
		"ghcr.io/devcontainers/features/git-lfs": {},
		"ghcr.io/devcontainers/features/github-cli": {},
		"ghcr.io/devcontainers/features/nvidia-cuda": {
			"cudaVersion": "12.1"
		},
		"ghcr.io/devcontainers-contrib/features/ninja-asdf": {},
		"ghcr.io/devcontainers-contrib/features/tmux-apt-get": {},
		"ghcr.io/devcontainers-contrib/features/ffmpeg-apt-get": {}
	},
	"customizations": {
		"vscode": {
			"settings": {
				"python.defaultInterpreterPath": "/usr/local/bin/python",
				"python.pythonPath": "/usr/local/bin/python",
				"terminal.integrated.env.linux": {
					"PYTHONPATH": "${workspaceFolder}${pathSeparator}${env:PYTHONPATH}"
				},
			},
			// Add the IDs of extensions you want installed when the container is created.
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance",
				"ms-python.pylint",
				"ms-python.gather",
				"ms-python.isort",
				"ms-python.flake8",
				"ms-python.mypy-type-checker",
				"ms-python.black-formatter",
				"ms-toolsai.jupyter",
				"visualstudioexptteam.vscodeintellicode",
				"VisualStudioExptTeam.vscodeintellicode-completions",
				"donjayamanne.python-environment-manager",
				"ms-vsliveshare.vsliveshare"
			],
		}
	},
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],
	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "pip3 install --user -r .devcontainer/requirements.txt",
	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
	"remoteUser": "vscode",
	"updateRemoteUserUID": true
}